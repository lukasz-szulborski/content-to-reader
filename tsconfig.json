{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@services/*": ["services/*"],
      "@typings/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@errors/*": ["errors/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
